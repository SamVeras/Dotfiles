{
  /* -------------------------------------------------------------------- */
  /*                                Window                                */
  /* -------------------------------------------------------------------- */

  "window.commandCenter": false,
  "window.autoDetectColorScheme": false,
  "window.titleBarStyle": "custom",
  "window.customTitleBarVisibility": "auto",
  "window.menuBarVisibility": "compact",
  "window.title": " ",

  /* ---------------------------------------------------------------------- */
  /*                                 Editor                                 */
  /* ---------------------------------------------------------------------- */

  "editor.fontFamily": "CommitMono Nerd Font Mono",
  "editor.fontSize": 16,
  "editor.tabSize": 2,
  // "editor.lineHeight": 1.25,
  "editor.fontWeight": "500",
  "editor.formatOnSave": true,
  "editor.fontLigatures": false,
  "editor.indentSize": 2,
  "editor.detectIndentation": false,
  "editor.scrollbar.vertical": "hidden",
  "editor.scrollbar.verticalScrollbarSize": 16,
  "editor.folding": false,
  "editor.glyphMargin": false,
  "editor.lineDecorationsWidth": 10,
  "editor.guides.bracketPairsHorizontal": false,
  "editor.autoClosingBrackets": "never",
  "editor.smoothScrolling": true,
  "editor.rulers": [
    { "column": 80, "color": "#ffffff0F" },
    { "column": 100, "color": "#ffffff1F" },
    { "column": 120, "color": "#ffffff2F" }
  ],
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorBlinking": "phase",
  "editor.scrollbar.horizontal": "hidden",

  /* ---------------------------------------------------------------------- */
  /*                                Terminal                                */
  /* ---------------------------------------------------------------------- */

  "terminal.integrated.fontFamily": "CommitMono Nerd Font Mono",
  "terminal.integrated.gpuAcceleration": "on",
  "terminal.integrated.smoothScrolling": true,
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.enableMultiLinePasteWarning": false,

  /* ---------------------------------------------------------------------- */
  /*                                Workbench                               */
  /* ---------------------------------------------------------------------- */

  "workbench.colorTheme": "Visual Studio Dark - C++",
  "workbench.iconTheme": "vscode-icons",
  "workbench.startupEditor": "none",
  "workbench.sideBar.location": "right",
  "workbench.activityBar.location": "top",
  "workbench.layoutControl.enabled": false,

  /* ----------------------------------------------------------------------- */
  /*                                 Zen mode                                */
  /* ----------------------------------------------------------------------- */

  "zenMode.hideLineNumbers": false,
  "zenMode.showTabs": "none",
  "zenMode.hideActivityBar": true,
  "zenMode.fullScreen": true,

  /* ---------------------------------------------------------------------- */
  /*                                 Others                                 */
  /* ---------------------------------------------------------------------- */

  "security.workspace.trust.untrustedFiles": "open",

  /* ---------------------------------------------------------------------- */
  /*                               Formatters                               */
  /* ---------------------------------------------------------------------- */

  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[cpp]": {
    "editor.defaultFormatter": "xaver.clang-format"
  },
  "[c]": {
    "editor.defaultFormatter": "xaver.clang-format"
  },
  "[latex]": {
    "editor.defaultFormatter": "James-Yu.latex-workshop"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  /* ---------------------------------------------------------------------- */
  /*                               Extensions                               */
  /* ---------------------------------------------------------------------- */

  /* -------------------------------- Black ------------------------------- */
  "black-formatter.args": ["--line-length=80"],

  /* --------------------------- Comment Divider -------------------------- */
  "comment-divider.length": 100,
  "comment-divider.shouldLengthIncludeIndent": true,
  "comment-divider.languagesMap": {
    "c": ["//", "//"]
  },

  /* ------------------------------- Rewrap ------------------------------- */
  "rewrap.wrappingColumn": 80,
  "rewrap.doubleSentenceSpacing": true,

  /* --------------------------------- Git -------------------------------- */
  "git.autofetch": true,

  /* -------------------------------- C/C++ ------------------------------- */
  "C_Cpp.default.includePath": ["${workspaceFolder}/**"],
  "C_Cpp.default.compilerPath": "/usr/bin/gcc",

  /* ---------------------------- Clang Format ---------------------------- */
  "clang-format.executable": "clang-format",

  /* ------------------------------- Codeium ------------------------------ */
  "codeium.aggressiveShutdown": true,
  "codeium.enableCodeLens": false,
  "codeium.enableConfig": {
    "*": true,
    "latex": false
  },

  /* -------------------------------- Latex ------------------------------- */
  "latex-workshop.formatting.latex": "latexindent",

  /* ---------------------------------- Zig -------------------------------- */

  "zig.initialSetupDone": true,
  "zig.path": "zig",
  "zig.zls.path": "/home/sam/.config/Code/User/globalStorage/ziglang.vscode-zig/zls_install/zls",
  "zig.zls.inlayHintsExcludeSingleArgument": false,
  "zig.zls.inlayHintsShowBuiltin": false,
  "zig.zls.inlayHintsShowParameterName": false,
  "zig.zls.inlayHintsShowStructLiteralFieldType": false,
  "zig.zls.inlayHintsShowVariableTypeHints": false,

  /* ---------------------------------------------------------------------- */
  /*                                  Etc.                                  */
  /* ---------------------------------------------------------------------- */

  "http.proxyStrictSSL": false,
  "http.systemCertificates": false,
  "files.associations": {
    "*.tpp": "cpp"
  },
  "python.languageServer": "Pylance",
  "python.defaultInterpreterPath": "/home/sam/.miniconda/envs/manim-env/bin/python",
  "explorer.compactFolders": false,
  "diffEditor.ignoreTrimWhitespace": false,
  "diffEditor.renderSideBySide": false
}
