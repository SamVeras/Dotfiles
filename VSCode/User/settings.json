{
  "window.commandCenter": false,
  "editor.fontFamily": "'Fira Code', 'Noto Sans Mono SemiCondensed Medium'",
  // "terminal.integrated.fontFamily": "Inconsolata",
  "editor.fontSize": 16,
  "editor.tabSize": 2,
  "editor.fontWeight": "500",
  "editor.formatOnSave": true,
  "editor.fontLigatures": true,
  "editor.indentSize": 2,
  "editor.detectIndentation": false,
  "editor.scrollbar.horizontal": "hidden",
  "editor.scrollbar.vertical": "auto",
  // "editor.folding": false,
  "editor.glyphMargin": false,
  "editor.cursorStyle": "block-outline",
  "editor.lineDecorationsWidth": 2,
  "editor.guides.bracketPairsHorizontal": false,
  "editor.autoClosingBrackets": "never",
  "editor.rulers": [
    { "column": 80, "color": "#ffffff1c" },
    { "column": 100, "color": "#ffffff1c" }
  ],
  "workbench.startupEditor": "none",
  "terminal.integrated.gpuAcceleration": "on",
  "comment-divider.length": 78,
  "comment-divider.shouldLengthIncludeIndent": true,
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter"
  },
  "black-formatter.args": ["--line-length=100"],
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "security.workspace.trust.untrustedFiles": "open",
  "rewrap.wrappingColumn": 100,
  "rewrap.doubleSentenceSpacing": true,
  "workbench.sideBar.location": "right",
  "workbench.colorTheme": "Houston",
  "editor.minimap.enabled": false,
  "[cpp]": {
    "editor.defaultFormatter": "xaver.clang-format"
  },
  "terminal.integrated.smoothScrolling": true,
  "editor.smoothScrolling": true,
  "git.autofetch": true,
  "[c]": {
    "editor.defaultFormatter": "xaver.clang-format"
  },
  "C_Cpp.default.includePath": ["${workspaceFolder}/**"],
  "terminal.integrated.fontSize": 16,
  "clang-format.executable": "clang-format-18",
  "[latex]": {
    "editor.defaultFormatter": "James-Yu.latex-workshop"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "workbench.iconTheme": "material-icon-theme"
}
