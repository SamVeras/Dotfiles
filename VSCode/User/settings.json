{
  /* ------------------------------- Window ------------------------------- */
  "window.commandCenter": false,
  "window.autoDetectColorScheme": false,

  /* ------------------------------- Editor ------------------------------- */
  "editor.fontFamily": "'Fira Code', 'Noto Sans Mono SemiCondensed Medium'",
  "editor.fontSize": 16,
  "editor.tabSize": 2,
  "editor.fontWeight": "500",
  "editor.formatOnSave": true,
  "editor.fontLigatures": true,
  "editor.indentSize": 2,
  "editor.detectIndentation": false,
  "editor.scrollbar.horizontal": "hidden",
  "editor.scrollbar.vertical": "auto",
  "editor.folding": false,
  "editor.glyphMargin": false,
  "editor.cursorStyle": "block-outline",
  "editor.lineDecorationsWidth": 15,
  "editor.guides.bracketPairsHorizontal": false,
  "editor.autoClosingBrackets": "never",
  "editor.minimap.enabled": false,
  "editor.smoothScrolling": true,
  "editor.rulers": [
    { "column": 80, "color": "#ffffff1c" },
    { "column": 100, "color": "#ffffff1c" }
  ],

  /* ------------------------------- Terminal ------------------------------- */
  // "terminal.integrated.fontFamily": "Inconsolata",
  "terminal.integrated.gpuAcceleration": "on",
  "terminal.integrated.smoothScrolling": true,
  "terminal.integrated.fontSize": 16,

  /* ------------------------------- Wokrbench ------------------------------ */
  "workbench.startupEditor": "none",
  "workbench.colorTheme": "Ayu Mirage Bordered",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.sideBar.location": "right",

  /* ------------------------------- Outros ------------------------------- */
  "security.workspace.trust.untrustedFiles": "open",

  /* ------------------------------ Formatters ------------------------------ */
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[cpp]": {
    "editor.defaultFormatter": "xaver.clang-format"
  },
  "[c]": {
    "editor.defaultFormatter": "xaver.clang-format"
  },
  "[latex]": {
    "editor.defaultFormatter": "James-Yu.latex-workshop"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[java]": {
    "editor.defaultFormatter": "redhat.java"
  },
  /* ------------------------------ Extensions ------------------------------ */
  "comment-divider.length": 78,
  "comment-divider.shouldLengthIncludeIndent": true,
  "black-formatter.args": ["--line-length=100"],
  "rewrap.wrappingColumn": 100,
  "rewrap.doubleSentenceSpacing": true,
  "git.autofetch": true,
  "C_Cpp.default.includePath": ["${workspaceFolder}/**"],
  "clang-format.executable": "clang-format-18",
  "redhat.telemetry.enabled": false
}
