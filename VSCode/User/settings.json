{
  /* -------------------------------------------------------------------- */
  /*                                Window                                */
  /* -------------------------------------------------------------------- */

  "window.commandCenter": false,
  "window.autoDetectColorScheme": false,
  "window.titleBarStyle": "custom",
  "window.customTitleBarVisibility": "auto",
  "window.menuBarVisibility": "compact",
  "window.title": " ",

  /* ---------------------------------------------------------------------- */
  /*                                 Editor                                 */
  /* ---------------------------------------------------------------------- */

  "editor.fontFamily": "Terminus \\(TTF\\), Hack, InconsolataGo Nerd Font Mono, Hack, JetBrainsMono Nerd Font, DejaVu Sans Mono, Terminess Nerd Font Mono",
  "editor.fontSize": 14,
  "editor.tabSize": 4,
  //   "editor.lineHeight": 1.3,
  //   "editor.fontWeight": "500",
  "editor.formatOnSave": true,
  "editor.fontLigatures": true,
  "editor.indentSize": 4,
  "editor.detectIndentation": false,
  "editor.scrollbar.horizontal": "hidden",
  "editor.scrollbar.vertical": "auto",
  "editor.folding": true,
  "editor.glyphMargin": false,
  "editor.lineDecorationsWidth": 20,
  "editor.guides.bracketPairsHorizontal": false,
  "editor.autoClosingBrackets": "never",
  "editor.minimap.enabled": false,
  "editor.smoothScrolling": true,
  "editor.rulers": [
    { "column": 80, "color": "#ffffff1c" },
    { "column": 100, "color": "#ffffff1c" }
  ],
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorBlinking": "phase",

  /* ---------------------------------------------------------------------- */
  /*                                Terminal                                */
  /* ---------------------------------------------------------------------- */

  "terminal.integrated.fontFamily": "Hack, InconsolataGo Nerd Font Mono, Cascadia Mono",
  "terminal.integrated.gpuAcceleration": "on",
  "terminal.integrated.smoothScrolling": true,
  "terminal.integrated.fontSize": 16,
  "terminal.integrated.enableMultiLinePasteWarning": false,

  /* ---------------------------------------------------------------------- */
  /*                                Workbench                               */
  /* ---------------------------------------------------------------------- */

  "workbench.startupEditor": "none",
  "workbench.colorTheme": "Monokai Pro",
  "workbench.iconTheme": "Monokai Pro Icons",
  "workbench.sideBar.location": "right",
  "workbench.activityBar.location": "top",
  "workbench.layoutControl.enabled": false,

  /* ---------------------------------------------------------------------- */
  /*                                 Others                                 */
  /* ---------------------------------------------------------------------- */

  "security.workspace.trust.untrustedFiles": "open",

  /* ---------------------------------------------------------------------- */
  /*                               Formatters                               */
  /* ---------------------------------------------------------------------- */

  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[cpp]": {
    "editor.defaultFormatter": "xaver.clang-format"
  },
  "[c]": {
    "editor.defaultFormatter": "xaver.clang-format"
  },
  "[latex]": {
    "editor.defaultFormatter": "James-Yu.latex-workshop"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  /* ---------------------------------------------------------------------- */
  /*                               Extensions                               */
  /* ---------------------------------------------------------------------- */

  /* -------------------------------- Black ------------------------------- */
  "black-formatter.args": ["--line-length=100"],

  /* --------------------------- Comment Divider -------------------------- */
  "comment-divider.length": 78,
  "comment-divider.shouldLengthIncludeIndent": true,

  /* ------------------------------- Rewrap ------------------------------- */
  "rewrap.wrappingColumn": 80,
  "rewrap.doubleSentenceSpacing": true,

  /* --------------------------------- Git -------------------------------- */
  "git.autofetch": true,

  /* -------------------------------- C/C++ ------------------------------- */
  "C_Cpp.default.includePath": ["${workspaceFolder}/**"],
  "C_Cpp.default.compilerPath": "/usr/bin/gcc",

  /* ---------------------------- Clang Format ---------------------------- */
  "clang-format.executable": "clang-format",

  /* ------------------------------- Codeium ------------------------------ */
  "codeium.aggressiveShutdown": true,
  "codeium.enableCodeLens": false,
  "codeium.enableConfig": {
    "*": true,
    "latex": false
  },

  /* -------------------------------- Latex ------------------------------- */
  "latex-workshop.formatting.latex": "latexindent",

  /* ---------------------------------------------------------------------- */
  /*                                  Etc.                                  */
  /* ---------------------------------------------------------------------- */

  "http.proxyStrictSSL": false,
  "http.systemCertificates": false,
  "files.associations": {
    "*.tpp": "cpp"
  },
  "python.languageServer": "Pylance",
  "python.defaultInterpreterPath": "/home/sam/.miniconda/envs/manim-env/bin/python",
  "cmake.pinnedCommands": [
    "workbench.action.tasks.configureTaskRunner",
    "workbench.action.tasks.runTask"
  ],
  "explorer.compactFolders": false,

  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": [
          "comment",
          "comment.block",
          "comment.block.documentation",
          "comment.line",
          "constant",
          "constant.character",
          "constant.character.escape",
          "constant.numeric",
          "constant.numeric.integer",
          "constant.numeric.float",
          "constant.numeric.hex",
          "constant.numeric.octal",
          "constant.other",
          "constant.regexp",
          "constant.rgb-value",
          "emphasis",
          "entity",
          "entity.name",
          "entity.name.class",
          "entity.name.function",
          "entity.name.method",
          "entity.name.section",
          "entity.name.selector",
          "entity.name.tag",
          "entity.name.type",
          "entity.other",
          "entity.other.attribute-name",
          "entity.other.inherited-class",
          "invalid",
          "invalid.deprecated",
          "invalid.illegal",
          "keyword",
          "keyword.control",
          "keyword.operator",
          "keyword.operator.new",
          "keyword.operator.assignment",
          "keyword.operator.arithmetic",
          "keyword.operator.logical",
          "keyword.other",
          "markup",
          "markup.bold",
          "markup.changed",
          "markup.deleted",
          "markup.heading",
          "markup.inline.raw",
          "markup.inserted",
          "markup.italic",
          "markup.list",
          "markup.list.numbered",
          "markup.list.unnumbered",
          "markup.other",
          "markup.quote",
          "markup.raw",
          "markup.underline",
          "markup.underline.link",
          "meta",
          "meta.block",
          "meta.cast",
          "meta.class",
          "meta.function",
          "meta.function-call",
          "meta.preprocessor",
          "meta.return-type",
          "meta.selector",
          "meta.tag",
          "meta.type.annotation",
          "meta.type",
          "punctuation.definition.string.begin",
          "punctuation.definition.string.end",
          "punctuation.separator",
          "punctuation.separator.continuation",
          "punctuation.terminator",
          "storage",
          "storage.modifier",
          "storage.type",
          "string",
          "string.interpolated",
          "string.other",
          "string.quoted",
          "string.quoted.double",
          "string.quoted.other",
          "string.quoted.single",
          "string.quoted.triple",
          "string.regexp",
          "string.unquoted",
          "strong",
          "support",
          "support.class",
          "support.constant",
          "support.function",
          "support.other",
          "support.type",
          "support.type.property-name",
          "support.variable",
          "variable",
          "variable.language",
          "variable.name",
          "variable.other",
          "variable.other.readwrite",
          "variable.parameter"
        ],
        "settings": {
          "fontStyle": ""
        }
      }
    ]
  }
}
